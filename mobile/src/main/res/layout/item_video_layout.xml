<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/type_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#97C4F0"
            />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_img"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titre_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video du Hooper 1/X"/>

        <TextView
            android:id="@+id/console_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#41181F"
            android:text="PS3"
            android:textColor="#FFDC98"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/date_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="11dp"
            android:textColor="#EDC86F"
            android:text="19 nov 1990"/>

        <TextView
            android:id="@+id/description_item"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:text="Une video de notre gros ours"/>

    </LinearLayout>

</LinearLayout>